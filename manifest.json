{
	"manifest_version":	2,
	
	"name":				"CrackSoundBoard",
	"description":			"Sounds from your favorite mod are now going to your browser!",
	"version":			"1.0",
	
	"content_scripts": [
		{
			"matches": 	["*://*/*"],
			"js":		["js/content.js"]
		}
	],
	
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "html/popup.html"
	},
	
	"background": {
		"scripts":	["js/events.js"],
		"president":false
	},
	
	"permissions": [
		"activeTab",
		"tabs",
		"downloads"
	]
}
