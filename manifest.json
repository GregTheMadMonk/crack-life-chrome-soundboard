{
	"manifest_version":	2,
	
	"name":				"CrackSoundBoard",
	"description":			"Sounds from your favorite mod are now going to your browser!",
	"version":			"1.0",
	"icons":			{"64": "img/icon.png" },
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "html/popup.html"
	},
	
	"background": {
		"scripts":	["js/events.js"],
		"president":false
	},
	
	"permissions": [
		"tabs",
		"downloads",
		"notifications",
		"storage"
	]
}
